<form class="form-horizontal">
    <h2>1. Setup PagerDuty</h2>
    <div class="control-group">
        <p>
            <a href="https://www.pagerduty.com/sign-up/" target="_blank" rel="noopener noreferrer">Sign up</a>
            and obtain your PagerDuty API token.
        </p>
        <label class="control-label">{{ _('Token') }}</label>
        <div class="controls">
            <input type="password" class="input-block-level" data-bind="value: settings.plugins.octopager.pd_token">
        </div>
        </br>
        <p>Select the name of the service you want the alert to be sent to.</p>
        <label class="control-label">{{ _('Service Name') }}</label>
        <div class="controls">
            <select class="input-block-level" data-bind="value: settings.plugins.octopager.pd_service_id">
                {% for service in plugin_octopager_services %}
                <option value="{{ service['id'] }}">{{ service["name"] }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    </br>
    <h2>2. Select Alerts</h2>
    <div class="control-group">
        <label class="control-label">{{ _('Print Done') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: settings.plugins.octopager.print_done">
        </div>
        <label class="control-label">{{ _('Print Failed') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.octopager.print_failed">
        </div>
        <label class="control-label">{{ _('First Layer Done') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.octopager.first_layer_done">
        </div>
    </div>
    </br>
    <h2>3. Confirm</h2>
    <div class="control-group">
        <label class="control-label">{{ _('Send test alert on next restart') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.octopager.test_start_alert">
        </div>
    </div>
</form>